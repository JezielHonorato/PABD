<!DOCTYPE html>
<html>

<head>
  <title>Listagem de Autores</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    function exclui(IdAutor){
      Swal.fire({
        title: 'Exclusão de Autor',
        text: "Deseja realmente excluir este autor?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Sim'
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: "/autores/delete/" + IdAutor,
            type: "DELETE",
            success: function (res) {
              $(location).attr('href', '/autores/listar');
            },
          });
        }
      })
    }
    </script>
</head>

<body>
  <a href="http://localhost:3000/autores/add"><button type="button" class="btn btn-success">Incluir Autores</button></a>

  <h1>Listagem de Autores</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nome</th>
        <th scope="col">Nacionalidade</th>
        <th scope="col">Operações</th>
      </tr>
    </thead>
    <tbody>
      <% for (item of resultado) {%>
        <tr>
          <td scope="row">
            <%= item.IdAutor%>
          </td>
          <td scope="row">
            <%= item.NoAutor%>
          </td>
          <td scope="row">
            <%= item.NoNacionalidade%>
          </td>
          <td scope="row">
            <button type="button" class="btn btn-danger" onclick = "exclui(<%=item.IdAutor%>)">Excluir</button>
          </td>
        </tr>
      <%}%>
    </tbody>
  </table>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

</body>

</html>